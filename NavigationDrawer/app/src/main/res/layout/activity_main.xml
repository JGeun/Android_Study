<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp"
    android:paddingVertical="100dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_drawer_by_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="drawer_fragment"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_drawer_by_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="drawer_navigation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Navi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_btm_navi_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom_navi_fragment"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_btm_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom_navigation"
        android:layout_marginTop="5dp"/>

</LinearLayout>